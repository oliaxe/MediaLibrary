

@model IEnumerable<Books>
@{
    ViewData["Title"] = "Index";
}

    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h1 class="fw-light">Books List</h1>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Books" asp-action="Create" class="btn btn-secondary">
                    <i class="bi bi-plus-circle"></i> &nbsp; Add a New Book
                </a>
            </div>
        </div>
        <br />

        <table class="table table-striped table-dark">
            <thead>
              <tr>
                <th class="h4 fw-light" scope="col">Book Title</th>
                <th class="h4 fw-light" scope="col">Author</th>
                <th class="h4 fw-light" scope="col">Category</th>
                <th class="h3 fw-light" class="pl-5"> </th>
              </tr>
            <br />
            </thead>
            <tbody>
             @foreach(var obj in Model)
                {

              <tr>
                <td>                        @obj.Title
                </td>
                <td>                        @obj.Author
                </td>
                <td>@obj.Category</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a id="edit" asp-controller="Books" asp-action="Edit" asp-route-id="@obj.Id" class="btn mx-2"><i class="bi bi-pencil"></i>&nbsp; Edit</a>
                        <a id="delete" asp-controller="Books" asp-action="Delete" asp-route-id="@obj.Id" class="btn mx-2"><i class="bi bi-trash-fill"></i>&nbsp; Delete</a>

                    </div>
                </td>
              </tr>
              }
            </tbody>
          </table>
    </div>