@model Albums 

<form method="post">
    <div class="border p-3 mt-4 border-dark">
        <div class="row pb-2">
            <h1 class="fw-light">Add Album</h1>
            <hr />

        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control">
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
                <div class="mb-3">
            <label asp-for="Artist"></label>
            <input asp-for="Artist" class="form-control">
            <span asp-validation-for="Artist" class="text-danger"></span>

        </div>

            <div class="mb-3">
            <label asp-for="Genre"></label>
            <input asp-for="Genre" class="form-control">
            <span asp-validation-for="Genre" class="text-danger"></span>

        </div>
        <button type="submit" class="btn" id="delete" style="width:150px">Add</button>
        <a asp-controller="Books" asp-action="Index" class="btn" id="edit" style="width:150px">Back to list</a>
    </div>
</form>

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />

    }
}
